<!-- res/drawable/rounded_edittext.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Bo góc -->
    <corners android:radius="16dp" />

    <!-- Viền -->
    <stroke
        android:width="2dp"
        android:color="#D3D3D3" /> <!-- Màu tím hoặc bạn có thể thay đổi -->

    <!-- Padding nội bộ (nếu cần) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>