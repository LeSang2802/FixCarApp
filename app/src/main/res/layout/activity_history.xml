<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LichSuYeuCau.HistoryActivity">
    <ImageView
        android:id="@+id/imgGoBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_goback"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/imgGoBack"
        android:text="Lịch sử yêu cầu đã gửi"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/imgGoBack"
        android:id="@+id/rcvHistoryRequests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp"
        />
</RelativeLayout>