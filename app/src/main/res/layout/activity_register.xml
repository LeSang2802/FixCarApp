<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#002B36"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivLogo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRegister"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/txtilname"
            android:layout_marginTop="20dp"
            android:hint="Họ tên hoặc tên trung tâm "
            android:alpha="0.7"
            android:gravity="center_vertical"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:id="@+id/txtiename"
                android:layout_gravity="center"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtilemail"
            android:hint="Email"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:id="@+id/txtieemail"
                android:layout_gravity="center"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtilp"
            android:hint="Mật khẩu"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:id="@+id/txtiep"
                android:layout_gravity="center"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtilrp"
            android:hint="Xác nhận lại mật khẩu"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:id="@+id/txtierp"
                android:layout_gravity="center"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
        <RadioGroup
            android:id="@+id/rgUserType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp">
            <RadioButton
                android:id="@+id/rbUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người dùng" />

            <RadioButton
                android:id="@+id/rbRescueUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung tâm cứu hộ"
                android:layout_marginLeft="20dp" />
        </RadioGroup>
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Đăng ký"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FD9800"/>
        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại đăng nhập"
            android:layout_gravity="right"
            android:layout_marginRight="60dp"
            android:textColor="	#03A9F4"/>
    </LinearLayout>
</RelativeLayout>