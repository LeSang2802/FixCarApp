<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request 01"
            android:fontFamily="@font/font"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tvNamePersonRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten nguoi yeu cau"
            android:textColor="@color/cl_text_xam_nhat"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvAdressPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dia chi nguoi yeu cau"
            android:textColor="@color/cl_text_xam_nhat"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvSdtPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT"
            android:textColor="@color/cl_text_xam_nhat"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tình trạng"
            android:layout_marginLeft="20dp"
            android:textColor="@color/cl_text_xam_nhat"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnAccept"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Xác nhận"
        android:textSize="8dp"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/blue"/>
    <Button
        android:id="@+id/btnCancle"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Từ chối"
        android:textSize="8dp"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/red"
        android:layout_marginHorizontal="10dp"/>
</LinearLayout>